@model Orders_part.ViewModels.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Checkout</h2>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-warning text-center">
            @TempData["Error"]
        </div>
    }

    <div class="card p-4 shadow-sm">
        <form asp-action="PlaceOrder" method="post">
            <div class="mb-3">
                <label for="Address" class="form-label">Shipping Address</label>
                <input type="text" class="form-control" id="Address" name="Address" required
                       placeholder="Enter your shipping address" value="@Model.Address" />
                @if (ViewData.ModelState["Address"]?.Errors.Count > 0)
                {
                    <div class="text-danger">@ViewData.ModelState["Address"]?.Errors[0].ErrorMessage</div>
                }
            </div>

            <div class="mb-3">
                <label for="PhoneNumber" class="form-label">Phone Number</label>
                <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" required
                       placeholder="Enter your phone number" value="@Model.PhoneNumber" />
                @if (ViewData.ModelState["PhoneNumber"]?.Errors.Count > 0)
                {
                    <div class="text-danger">@ViewData.ModelState["PhoneNumber"]?.Errors[0].ErrorMessage</div>
                }
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="@Url.Action("Index", "Cart")" class="btn btn-secondary">Back to Cart</a>
                <button type="submit" class="btn btn-primary">Place Order</button>
            </div>
        </form>
    </div>
</div>
